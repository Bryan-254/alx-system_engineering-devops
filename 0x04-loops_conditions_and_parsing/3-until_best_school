#!/usr/bin/env bash
# This script is displaying "Best School" 10 times using unitl loop

# Counter to keep track of iterations
count=0

# $count -eq 10 is a test condition in Bash scripting.
# The script keeps executing the code inside the do...done block until the
# value of $count is equal to 10.
until [ $count -eq 10 ]
do
  echo "Best School"
  ((count++))
done
