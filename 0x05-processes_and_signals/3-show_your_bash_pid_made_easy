#!/usr/bin/env bash
# Bash script that displays the PID, along with the process name

# Get the PID of the script
script_pid=$$

# Use pgrep to find PIDs of processes containing the word 'bash'
bash_pids=$(pgrep -f bash)

# Iterate through the obtained PIDs and display process name and PID
for pid in $bash_pids; do
    # Skip the script's own PID
    if [ "$pid" -ne "$script_pid" ]; then
        process_name=$(ps -o comm= -p $pid)
        echo "$pid $process_name"
    fi
done
